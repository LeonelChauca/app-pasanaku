<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupPaymentActivity">

    <!-- Botón de Retroceso -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_back_arrow" <!-- Reemplaza con tu ícono de flecha -->
    android:contentDescription="Volver"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_marginStart="16dp"
    app:layout_marginTop="16dp" />

    <!-- Título del Grupo -->
    <TextView
        android:id="@+id/groupTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EstaGas"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Capital Jugado y Cuota -->
    <TextView
        android:id="@+id/capitalJugadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital Jugado: Bs. 5000"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/groupTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cuotaMensualTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuota Mensual: Bs. 1000"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/capitalJugadoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Tabla de Participantes -->
    <TableLayout
        android:id="@+id/participantsTableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2"
        android:background="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cuotaMensualTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TableRow>
            <TextView
                android:text="N°"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:text="Usuario"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:text="Estado"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </TableRow>

        <!-- Fila de datos -->
        <TableRow>
            <TextView
                android:text="1"
                android:padding="8dp" />

            <TextView
                android:text="Dennis Muriel"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:text="Entregado"
                android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="2"
                android:padding="8dp" />

            <TextView
                android:text="Jonatan Lopez"
                android:padding="8dp" />

            <TextView
                android:text="Entregado"
                android:padding="8dp" />
        </TableRow>

        <!-- Agrega más filas según sea necesario -->

    </TableLayout>

    <!-- Próximo Pago en Fecha -->
    <TextView
        android:id="@+id/nextPaymentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximo Pago en fecha:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/participantsTableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/paymentDateEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="09/25/2024"
        android:inputType="date"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nextPaymentTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calendarButton"
        android:layout_marginTop="8dp" />

    <!-- Botón de Calendario -->
    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:layout_constraintTop_toBottomOf="@+id/nextPaymentTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <!-- Campo de Mensaje -->
    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mensaje"
        android:minLines="3"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/paymentDateEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botones de Pagar Cuota y Historial de Pagos -->
    <Button
        android:id="@+id/payFeeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PAGAR CUOTA"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_purple"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/messageEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/paymentHistoryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HISTORIAL DE PAGOS"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_purple"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/payFeeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>