<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentsActivity">

    <!-- Título (Nombre de Usuario) -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DENNIS MURIEL"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Icono del Usuario -->
    <!-- Reemplazar con el icono del usuario -->
    app:layout_constraintTop_toBottomOf="@+id/usernameTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tarjeta de Pagos Realizados -->
    <androidx.cardview.widget.CardView
        android:id="@+id/paymentCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="112dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título de la tarjeta -->
            <TextView
                android:id="@+id/paymentTitleTextView"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:padding="8dp"
                android:text="PAGOS REALIZADOS"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Lista de Pagos -->
            <TextView
                android:id="@+id/payment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="N° 1.- Dennis Muriel"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/payment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="N° 2.- Jonatan Lopez"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/payment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="N° 3.- Nicol Apaza"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>